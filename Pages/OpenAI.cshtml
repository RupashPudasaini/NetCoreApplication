@page
@model OpenAIWebApp.Pages.OpenAIModel
@{
    ViewData["Title"] = "OpenAI";
}

<h2>OpenAI Text Submission</h2>

<form method="post" asp-page-handler="Chat">
    <div class="form-group">
        <label for="UserInput">Enter your text:</label>
        <input type="text" class="form-control" id="UserInput" name="UserInput" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@if (Model.ResponseText != null)
{
    <div class="alert alert-success mt-3">
    <h4>Response from OpenAI:</h4>
    <p>@Model.ResponseText</p>
</div>
}


<div class="text-center">
    <h1 class="display-4">Upload a File</h1>
    <form method="post" enctype="multipart/form-data" asp-page-handler="Upload">
        <input type="file" name="uploadedFile" />
        <button type="submit" class="btn btn-primary">Upload</button>
    </form>
    <div>
        @if (Model.Summary != null)
        {
            <h3>Summary:</h3>
            <p>@Model.Summary</p>
        }
    </div>
</div>
